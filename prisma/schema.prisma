generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  role      String     @default("customer") // admin / customer
  createdAt DateTime   @default(now())
  orders    Order[]
  cartItems CartItem[]
  reviews   Review[]
}
model Product {
  id         Int              @id @default(autoincrement())
  name       String
  price      Float
  images     ProductImage[]
 categoryId Int?
  category   Category?        @relation("CategoryProducts", fields: [categoryId], references: [id], onDelete: SetNull)
  metalId    Int?
  metal      Metal?           @relation(fields: [metalId], references: [id], onDelete: SetNull) 
  cartItems  CartItem[]
  orderItems OrderItem[]
  reviews    Review[]
}
model Metal {
  id       Int       @id @default(autoincrement())
  name     String    @unique // "Gold", "Silver", "Platinum"
  products Product[]
}


model CartItem {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
}

model Order {
  id         Int         @id @default(autoincrement())
  user       User        @relation(fields: [userId], references: [id])
  userId     Int
  status     String      @default("pending") 
  total      Float
  createdAt  DateTime    @default(now())
  orderItems OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  price     Float // capture price at order time
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String   @unique
  imageUrl  String 
   products  Product[] @relation("CategoryProducts")
}

model Review {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
}


model ProductImage {
  id        Int      @id @default(autoincrement())
  url       String
  order     Int      @default(0)

  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}
